{
  "name": "git-pulse",
  "version": "0.3.0",
  "description": "CLI tool to display concise information from github repos you follow",
  "main": "./build/index.js",
  "bin": {
    "git-pulse": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "start": "ts-node src/index.ts",
    "start:init": "npm run clean:config && ts-node src/index.ts",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts init",
    "post-build": "mkdir -p build/templates && cp -R src/templates/config.yml build/templates/config.yml",
    "build": "tsc --p tsconfig.build.json && npm run post-build",
    "clean:config": "rm -rf ~/.git-pulse",
    "lint": "eslint '*/**/*.{js,ts}' --quiet --fix",
    "test": "jest --runInBand --verbose",
    "test:watch": "jest --runInBand --verbose --watch",
    "test:coverage": "jest --runInBand --coverage",
    "test:staged": "jest --runInBand --findRelatedTests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint",
      "npm run test:staged"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jltwheeler/git-pulse.git"
  },
  "keywords": [
    "cli",
    "github",
    "git",
    "typescript",
    "automation"
  ],
  "author": "Josh Wheeler",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jltwheeler/git-pulse/issues"
  },
  "homepage": "https://github.com/jltwheeler/git-pulse#readme",
  "devDependencies": {
    "@types/clear": "^0.1.1",
    "@types/inquirer": "^7.3.1",
    "@types/jest": "^26.0.15",
    "@types/js-yaml": "^3.12.5",
    "@types/node": "^14.14.10",
    "@types/yargs": "^15.0.11",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.2",
    "msw": "^0.24.2",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "strip-ansi": "^6.0.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "clear": "^0.1.0",
    "cli-spinners": "^2.5.0",
    "cli-table3": "^0.6.0",
    "graphql": "^15.4.0",
    "graphql-request": "^3.3.0",
    "inquirer": "^7.3.3",
    "js-yaml": "^3.14.0",
    "terminal-link": "^2.1.1",
    "yargs": "^16.1.1"
  }
}
